generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ClosedText {
  id      Int    @id @default(autoincrement())
  title   String
  text    String
  answers String
}

model MultipleChoice {
  id                Int    @id @default(autoincrement())
  question          String
  answerI           String
  answerICorrect    Boolean
  answerII          String
  answerIICorrect   Boolean
  answerIII         String
  answerIIICorrect  Boolean
  answerIV          String
  answerIVCorrect   Boolean
}

model Statistics {
  id      Int    @id @default(autoincrement())
  userId  Int
  action  String
  params  String
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  authorId  Int?
  author    User?    @relation(fields: [authorId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}
