generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ClosedText {
  id      Int    @id @default(autoincrement())
  title   String
  text    String
  answers String
}

model MultipleChoice {
  id               Int     @id @default(autoincrement())
  question         String
  answerI          String
  answerICorrect   Boolean
  answerII         String
  answerIICorrect  Boolean
  answerIII        String
  answerIIICorrect Boolean
  answerIV         String
  answerIVCorrect  Boolean
}

model Statistics {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  params    String
  createdAt DateTime @default(now())
}

model Trainings {
  id   Int    @id @default(autoincrement())
  name String
  list String
}

model TrainingSubmissions {
  id         Int              @id @default(autoincrement())
  userId     Int
  submission String
  resultId   Int?             @unique
  createdAt  DateTime         @default(now())
  result     TrainingResults?
}

model TrainingResults {
  id           Int                 @id @default(autoincrement())
  userId       Int
  scored       Int
  total        Int
  grade        Float
  submissionId Int                 @unique
  submission   TrainingSubmissions @relation(fields: [submissionId], references: [id])
}

model DragDrop {
  id         Int              @id @default(autoincrement())
  title      String     
  texts      String
  solution   String   
}